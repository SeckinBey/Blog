@model IEnumerable<Blog_MVC_App.Models.BlogModel>


@if (Model.Count()==0)
{
    <div class="alert alert-warning">
        <h3>No Records Found</h3>
    </div>

}


@foreach (var item in Model)
{
    <div class="blog">
        <h3 class="page-header">
            @item.Title
        </h3>
        <p>
            <span class="glyphicon glypthicon-time"></span>
            @item.UploadDate
        </p>
        <hr />
        <img class="img-responsive" src="https://placehold.it/900x300" alt="" />
        <hr />
        <p>
            @item.Explanation
        </p>
        @Html.ActionLink("More...", "Details", "Blog", new { id = item.Id }, new { @class = "btn btn-primary" })
    </div>
}
