@model IEnumerable<Blog_MVC_App.Models.Blog>

@{
    ViewBag.Title = "Index";
}

<h2>Blog List</h2>
<hr />

@if (TempData["Blog"] != null)
{
    var blog = (Blog_MVC_App.Models.Blog)TempData["Blog"];
    <div class="alert alert-success" role="alert">
        <strong><span class="glyphicon glyphicon-ok" ></span> @blog.Title Saved.</strong>
    </div>
}

<p>
    @Html.ActionLink("Add New Blog", "Create", null, new { @class="btn btn-primary"  })
</p>
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Explanation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UploadDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Confirmation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HomePage)
        </th>
        <th style="width:165px;"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Explanation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Image)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UploadDate)
        </td>
        <td>
            @if (item.Confirmation)
            {
                <label class="label label-success" >Confirmed</label>
            }else
	        {
                <label class="label label-danger">Waiting for Confirmation</label>
	        }
        </td>
        <td>
            @if (item.HomePage)
            {
                <label class="label label-success">In Homepage</label>
            }
            else
            {
                <label class="label label-danger">Not In Homepage</label>
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new { @class="btn btn-warning btn-xs"}) 
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-primary btn-xs" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
